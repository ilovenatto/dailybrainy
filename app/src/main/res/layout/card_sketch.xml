<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="sketch"
            type="org.chenhome.dailybrainy.repo.game.Sketch" />

        <variable
            name="listener"
            type="org.chenhome.dailybrainy.ui.story.SketchCardListener" />
    </data>

    <com.google.android.material.card.MaterialCardView
        app:contentPadding="12dp"
        android:onClick="@{()->listener.onView(sketch)}"
        android:layout_width="350dp"
        android:layout_height="300dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{sketch.idea.origin.name()}"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                tools:text="Setting" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:imageUrl="@{sketch.imgUri}"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>

    