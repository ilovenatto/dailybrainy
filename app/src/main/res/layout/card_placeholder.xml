<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="dummy"
            type="org.chenhome.dailybrainy.ui.challenges.PlaceholderDummy" />
    </data>

    <com.google.android.material.card.MaterialCardView
        app:contentPadding="@dimen/margin_medium"
        app:cardUseCompatPadding="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{dummy.title}"
                android:textAppearance="@style/TextAppearance.Brainy.Overline"
                tools:text="today's lesson" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@{dummy.desc}"
                android:textAppearance="@style/TextAppearance.Brainy.Body2"
                tools:text="No lesson available" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>

