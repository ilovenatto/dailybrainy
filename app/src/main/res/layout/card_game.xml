<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="gameStub"
            type="org.chenhome.dailybrainy.repo.game.GameStub" />

        <variable
            name="listener"
            type="org.chenhome.dailybrainy.ui.challenges.GameListener" />
    </data>

    <com.google.android.material.card.MaterialCardView
        app:contentPadding="12dp"

        android:layout_width="350dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:padding="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                app:imageUrl="@{gameStub.challenge.imageUri}"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <LinearLayout
                android:layout_marginLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{gameStub.challenge.title}"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    tools:text="Lorem ipsum game foo" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{gameStub.names()}"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    tools:text="Johnny" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09/10/2010"
                    tools:text="@{gameStub.date(context)}" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:onClick="@{()->listener.onClick(gameStub)}"
                    android:text="Join" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>

    