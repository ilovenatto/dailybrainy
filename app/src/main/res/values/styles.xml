<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Color -->
        <!-- Customize theme per https://material.io/develop/android/theming/color -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>

        <!-- Surface -->
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorOnBackground">@color/primaryTextColor</item>
        <item name="colorOnSurface">@color/primaryTextColor</item>
        <item name="colorOnSecondary">@color/primaryTextColor</item>

        <!-- Components -->
        <item name="textInputStyle">@style/Widget.Design.TextInputLayout</item>

        <!-- Typography -->
        <!-- Customizes Materials components -->
        <!-- Also Customizes explicit typeface references in DailyBrainy layout code -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Brainy.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Brainy.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Brainy.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Brainy.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Brainy.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Brainy.Headline6</item>

        <item name="textAppearanceSubtitle1">@style/TextAppearance.Brainy.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Brainy.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Brainy.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Brainy.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Brainy.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Brainy.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Brainy.Overline</item>

    </style>
</resources>