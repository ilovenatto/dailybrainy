<resources>
    <!-- Override Material component styles -->

    <style name="Widget.Brainy.CardContainer" parent="">
        <item name="android:background">@color/primaryColor50</item>
    </style>

    <style name="Widget.Brainy.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/secondaryColor</item>
    </style>

    <style name="Widget.Brainy.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/secondaryColor</item>
    </style>


    <style name="Widget.Brainy.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:backgroundTint">@color/secondaryColor</item>
    </style>

    <style name="TextAppearance.Brainy.CollapsingToolbar.Transparent" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="TextAppearance.Brainy.CollapsingToolbar.Collapsed" parent="TextAppearance.Brainy.Headline4">
        <item name="fontFamily">@font/fredericka_the_great</item>
        <item name="android:letterSpacing">9.0</item>
        <item name="android:textColor">@color/secondaryColor</item>
    </style>
</resources>